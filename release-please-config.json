{
  "bump-minor-pre-major": true,
  "separate-pull-requests": true,
  "bump-patch-for-minor-pre-major": true,
  "include-v-in-tag": true,
  "tag-separator": "/",
  "changelog-sections": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Bug Fixes" },
    { "type": "chore", "section": "Miscellaneous Chores", "hidden": false },
    { "type": "docs", "section": "Documentation", "hidden": false }
  ],
  "packages": {
    "core": {
      "release-type": "go",
      "package-name": "github.com/googleapis/mcp-toolbox-sdk-go/core",
      "component": "core",
      "extra-files": [
        "transport/mcp/version.go"
      ]
    },
    "tbadk": {
      "release-type": "go",
      "package-name": "github.com/googleapis/mcp-toolbox-sdk-go/tbadk",
      "component": "tbadk",
      "extra-files": [
        "version.go"
      ]
    },
    "tbgenkit": {
      "release-type": "go",
      "package-name": "github.com/googleapis/mcp-toolbox-sdk-go/tbgenkit",
      "component": "tbgenkit",
      "extra-files": [
        "version.go"
      ]
    }
  }
}
